<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-tg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.plug}}">
                    <img src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.plug}}">
                        <h5 class="card-body">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.des}}</p>
                    <a href="" class="btn btn-primary">Mua khoa hoc</a>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>