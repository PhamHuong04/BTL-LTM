<div class="home">

    <section class="services py-5 bg-light1 text-center">
        <div class="container">
            <div class="row">
                {{#each books}}
                <div class="col-sm-4 col-tg-5">
                    <div class="card card-course-item mb-3">
                        <a href="/books/{{this.plug}}">
                            <img src="{{this.image}}" alt="{{this.name}}" class="img-thumbnail">
                        </a>
                        <div class="card-body">
                            <a href="/books/{{this.plug}}">
                                <h5 class="card-body">{{this.name}}</h5>
                            </a>
                            <p class="tacgia-text">Tác giả: {{this.tacgia}}</p>
                            <p class="view">Lượt đọc: {{this.view}}</p>
                            <p class="theloai">Thể loại: {{this.theloai}}</p>
                        </div>
                    </div>

                </div>
                {{/each}}


            </div>
        </div>
    </section>
</div>

